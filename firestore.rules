rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regra global: Bloqueia tudo por padrao
    match /{document=**} {
      allow read, write: if false;
    }

    // Colecao 'submissions' (Registros de Merenda)
    // Permitir leitura e escrita para usuarios autenticados
    match /submissions/{submissionId} {
      allow read, write: if request.auth != null;
    }

    // Colecao 'users' (Dados dos Usuarios)
    // Permitir leitura para autenticados (para carregar perfil)
    // Permitir escrita apenas para o proprio usuario (ou admin via backend)
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Colecao 'school_settings' (Configuracoes da Escola)
    // Permitir leitura e escrita para autenticados
    match /school_settings/{schoolId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
